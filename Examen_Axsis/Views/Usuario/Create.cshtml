@model Examen_Axsis.Models.Usuario

@{
    ViewBag.Title = "Agregar Nuevo Usuario";
}

<h2>Agregar Nuevo Usuario</h2>


@using (Html.BeginForm("Create","Usuario",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
